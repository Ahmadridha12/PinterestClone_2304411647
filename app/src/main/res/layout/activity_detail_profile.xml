<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <ImageView
                android:id="@+id/btnBackProfile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                app:tint="#FFFFFF" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Akun Anda"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutLihatProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/imgProfileBig"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_launcher_background" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvNameBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Pengguna"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat profil"
                    android:textColor="#888888"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView android:id="@+id/btnManageAccount" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Manajemen akun" android:textColor="#FFFFFF" android:padding="15dp" android:textSize="16sp" android:background="?attr/selectableItemBackground" />
        <TextView android:id="@+id/btnVisibility" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Visibilitas profil" android:textColor="#FFFFFF" android:padding="15dp" android:textSize="16sp" android:background="?attr/selectableItemBackground" />
        <TextView android:id="@+id/btnNotifications" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Notifikasi" android:textColor="#FFFFFF" android:padding="15dp" android:textSize="16sp" android:background="?attr/selectableItemBackground" />

        <TextView android:id="@+id/btnLogout" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Keluar" android:textColor="#FF4444" android:padding="15dp" android:textSize="16sp" android:textStyle="bold" android:background="?attr/selectableItemBackground" />

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#222222" android:layout_marginVertical="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pin yang Disimpan"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSavedPinsProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>